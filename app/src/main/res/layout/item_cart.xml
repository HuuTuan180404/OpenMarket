<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemtest_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp">

    <FrameLayout
        android:id="@+id/dasd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_gravity="top"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/border"
            android:backgroundTint="#E8ECD7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="130sp">

                <TextView
                    android:id="@+id/item_cart_name"
                    style="@style/Customer.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/buy"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="name of food" />

                <com.rey.material.widget.CheckBox
                    android:id="@+id/buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Customer.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:text="$" />

                <TextView
                    android:id="@+id/itemcart_price"
                    style="@style/Customer.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price" />
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="20sp">

            <ImageView
                android:id="@+id/itemcart_image"
                android:layout_width="120sp"
                android:layout_height="160sp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_default_load_category_faile" />

        </androidx.cardview.widget.CardView>


    </FrameLayout>

    <!--    button increase - decrease-->
    <LinearLayout
        android:id="@+id/layout_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dasd"
        android:layout_alignBottom="@+id/dasd"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Decrease"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_quantity"
            style="@style/Customer.TextView"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Increase"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@+id/layout_quantity"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="10sp"
        android:background="@color/den" />

</RelativeLayout>