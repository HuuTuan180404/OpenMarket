<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210sp"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:background="@drawable/border"
    android:backgroundTint="#E8ECD7">

    <!--    image-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_imFoodDetail"
        android:layout_width="150sp"
        android:layout_height="200sp"
        android:layout_marginVertical="5sp"
        android:layout_marginLeft="5sp"
        app:cardCornerRadius="20sp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default_load_category_faile" />

    </androidx.cardview.widget.CardView>

    <!--    detail-->
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@+id/cardView_imFoodDetail"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/Customer.TextView"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/Customer.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="@string/CURRENCY" />

            <TextView
                android:id="@+id/price_before_discount"
                style="@style/Customer.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price" />

            <TextView
                style="@style/Customer.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="x" />

            <TextView
                android:id="@+id/quantity"
                style="@style/Customer.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/Customer.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount: " />

            <TextView
                android:id="@+id/discount"
                style="@style/Customer.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <TextView
                style="@style/Customer.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>