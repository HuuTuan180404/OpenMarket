<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_food"
    android:layout_width="210sp"
    android:layout_height="320sp"
    android:layout_marginBottom="20sp"
    android:backgroundTint="@color/trang">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:layout_gravity="bottom"
        android:background="@drawable/border"
        android:backgroundTint="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="name"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="$ "
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/food_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="price"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/food_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="đánh giá" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_to_card"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/rounded_bottom_20sp"
                android:backgroundTint="@color/xanh_bien"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/im_cart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_variable"
                    android:text="ADD TO CART"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="150sp"
        android:layout_height="200sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:background="@drawable/rounded_20sp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default_load_category_faile" />

</androidx.cardview.widget.CardView>
