<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_food"
    android:layout_width="match_parent"
    android:layout_height="320sp"
    android:layout_marginHorizontal="5sp"
    android:layout_marginBottom="20sp"
    android:fitsSystemWindows="true"
    app:cardElevation="0sp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:layout_gravity="bottom"
        android:background="@drawable/border"
        android:backgroundTint="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="name"
                    android:theme="@style/Customer.TextView" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="$ "
                            android:theme="@style/Customer.TextView" />

                        <TextView
                            android:id="@+id/food_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="price"
                            android:theme="@style/Customer.TextView" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/food_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="đánh giá"
                        android:theme="@style/Customer.TextView" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/rounded_bottom_20sp"
                android:backgroundTint="@color/xanh_bien"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_to_card"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/xanh_bien"
                    android:drawableStart="@drawable/add_to_cart"
                    android:fontFamily="@font/satoshi_variable"
                    android:text=" Thêm vào giỏ hàng"
                    android:textColor="@color/trang" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="200sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        app:cardCornerRadius="20sp">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default_load_category_faile" />

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>
