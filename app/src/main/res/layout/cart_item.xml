<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    android:layout_margin="5sp"
    android:backgroundTint="@color/background"
    app:cardCornerRadius="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_cart_item"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"

            android:src="@drawable/image_default_load_category_faile" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_cart_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_cart_item"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/font_text_view"
                android:gravity="left"
                android:maxLines="2"
                android:text="name_cart_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/price_cart_item"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/font_text_view"
                android:maxLines="2"
                android:text="price_cart_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/quantity_cart_item"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/font_text_view"
                android:text="quantity_cart_item"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>