<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    android:layout_margin="5sp"
    android:backgroundTint="@color/background"
    app:cardCornerRadius="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_cart_item"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:src="@drawable/image_default_load_category_faile" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_cart_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_cart_item"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/font_text_view"
                android:gravity="left"
                android:maxLines="2"
                android:text="name_cart_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/price_cart_item"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/font_text_view"
                android:text="quantity_cart_item"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_Decrease"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/rounded_button_increase_decrease"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edittext_quantity"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_text_view"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_Increase"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/rounded_button_increase_decrease"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>