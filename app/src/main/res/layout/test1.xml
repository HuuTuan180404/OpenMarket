<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemtest_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp">

    <FrameLayout
        android:id="@+id/dasd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_gravity="top"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_cart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160sp"
                android:text="name of food"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:fontFamily="@font/futuramedium"
                    android:text="$"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/itemcart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/itemcart_image"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_20sp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default_load_category_faile" />

    </FrameLayout>

    <!--    button increase - decrease-->
    <LinearLayout
        android:id="@+id/layout_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dasd"

        android:layout_alignBottom="@+id/dasd"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Decrease"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_quantity"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futuramedium"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Increase"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>